<section class=" job-bg ad-details-page">
  <div class="container">
    <div class="breadcrumb-section">
      <!-- breadcrumb -->
      <ol class="breadcrumb">
        <li><%= link_to "Home", root_path %></li>
        <li>Write a Review </li>
      </ol><!-- breadcrumb -->
      <h2 class="title">Write a Review</h2>
    </div><!-- banner -->

    <% if @restaurant.errors.any? %>
      <div class="alert alert-danger">
        <button type="button" class="close" data-dismiss="alert">x</button>
        <ul>
        <% @restaurant.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    <% end %>

    <div class="job-postdetails">
      <div class="row">
        <div class="col-md-8">
        <%= form_for @restaurant do |f| %>
          <fieldset>
            <div class="section postdetails">
              <h4>Postea tu Oferta<span class="pull-right">* Campos Necesarios</span></h4>
                <div class="row form-group">
                  <label class="col-sm-3 label-title">Nombre de la Oferta<span class="required">*</span></label>
                  <div class="col-sm-9">
                    <%= f.text_field :name, :class => 'form-control', placeholder: "ejm: Trabajo por 3 Horas como Modelo Protocolo BTL" %>
                  </div>
                </div>
                <div class="row form-group item-description">
                  <label class="col-sm-3 label-title">Descripci칩n (M치s de 250 caracteres)<span class="required">*</span></label>
                  <div class="col-sm-9">
                    <%= f.text_area :description, :class => 'form-control', placeholder: "Escribe mas de 250 caracteres con la descripcio칩n del trabajo", rows: "8" %>
                  </div>
                </div>
                <div class="row form-group">
                  <label class="col-sm-3 label-title">address1<span class="required">*</span></label>
                  <div class="col-sm-9">
                    <%= f.text_field :address1, :class => 'form-control', placeholder: "address1" %>
                  </div>
                </div>
                <div class="row form-group">
                  <label class="col-sm-3 label-title">address2<span class="required">*</span></label>
                  <div class="col-sm-9">
                    <%= f.text_field :address2, :class => 'form-control', placeholder: "address2" %>
                  </div>
                </div>
                <div class="row form-group">
                  <label class="col-sm-3 label-title">city<span class="required">*</span></label>
                  <div class="col-sm-9">
                    <%= f.text_field :city, :class => 'form-control', placeholder: "city" %>
                  </div>
                </div>
                <div class="row form-group">
                  <label class="col-sm-3 label-title">state<span class="required">*</span></label>
                  <div class="col-sm-9">
                    <%= f.text_field :state, :class => 'form-control', placeholder: "state" %>
                  </div>
                </div>
                <div class="row form-group">
                  <label class="col-sm-3 label-title">zipcode<span class="required">*</span></label>
                  <div class="col-sm-9">
                    <%= f.text_field :zipcode, :class => 'form-control', placeholder: "zipcode" %>
                  </div>
                </div>
                <div class="row form-group">
                  <label class="col-sm-3 label-title">phone<span class="required">*</span></label>
                  <div class="col-sm-9">
                    <%= f.text_field :phone, :class => 'form-control', placeholder: "phone" %>
                  </div>
                </div>
                <div class="row form-group">
                  <label class="col-sm-3 label-title">email<span class="required">*</span></label>
                  <div class="col-sm-9">
                    <%= f.text_field :email, :class => 'form-control', placeholder: "email" %>
                  </div>
                </div><br>
                <%= f.submit "Postear Restaurante", :class => "btn btn-primary" %>
            </div>
          </fieldset>
        <% end %>
        </div>
        <!-- quick-rules -->
        <div class="col-md-4">
          <div class="section quick-rules">
            <h4>Reglas B치sicas</h4>
            <p class="lead">Postear una oferta es gratis! sin embargo, aqui tenemos algunas reglas simples:</p>

            <ul>
              <li>Make sure you post in the correct category.</li>
              <li>Do not post the same ad more than once or repost an ad within 48 hours.</li>
              <li>Do not upload pictures with watermarks.</li>
              <li>Do not post ads containing multiple items unless it's a package deal.</li>
              <li>Do not put your email or phone numbers in the title or description.</li>
              <li>Make sure you post in the correct category.</li>
              <li>Do not post the same ad more than once or repost an ad within 48 hours.</li>
              <li>Do not upload pictures with watermarks.</li>
              <li>Do not post ads containing multiple items unless it's a package deal.</li>
            </ul>
          </div>
        </div><!-- quick-rules -->
      </div><!-- photos-ad -->
    </div>
  </div><!-- container -->
</section><!-- main -->
